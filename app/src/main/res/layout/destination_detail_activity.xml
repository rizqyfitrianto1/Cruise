<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DestinationDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_destination"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:id="@+id/line"
            android:layout_below="@+id/img_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indonesia"/>

            <TextView
                android:id="@+id/price"
                android:layout_below="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="5dp"
                android:text="Rp. 31.000.000"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/title"
                android:layout_below="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="5dp"
                android:text="3 NIGHT"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/ship"
                android:layout_below="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Royal Bahamas"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/date"
                android:layout_below="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Start Date : 17/12/2019"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/visiting"
                android:layout_below="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Visiting : Fort Laudardale, Nassau, Cruising"
                android:textSize="12sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_edit"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:text="EDIT"/>

        <Button
            android:id="@+id/btn_hapus"
            android:layout_below="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:text="HAPUS"/>

    </RelativeLayout>

</ScrollView>